generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum HeroClass {
  WARRIOR
  TANK
  ASSASSIN
  MAGE
}

model Hero {
  id        String    @id @default(uuid())
  name      String
  class     HeroClass
  hp        Int
  atk       Int
  res       Int
  speed     Int
  gold      Int       @default(0)
  inventory String[]
}
